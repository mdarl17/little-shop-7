<h1><%= "#{@merchant.name}'s New Discount" %></h1>
<%= form_with url: merchant_discounts_path(@merchant.id), method: :post, local: true do |f| %>
  <%= f.label "Enter rate" %>
  <%= f.text_field :new_rate %>

  <%= f.label "Enter quantity" %>
  <%= f.text_field :threshold %>

  <%= f.submit "Add new discount" %>
<% end %>