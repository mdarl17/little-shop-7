  <div id="top-five-outer-container">
    <div class="subhead">
      <h2>Top 5 Merchants by Total Revenue</h2>
    </div>

    <p><%= link_to "Sort A-Z", "/admin/merchants?sort=alphabetical" %></p>
    <p><%= link_to "Sort By Most Recent", "/admin/merchants?sort=date" %></p>
    
    <div class="row">
      <h3 class="column">Merchant</h3>
      <h3 class="column">Total Revenue</h3>
      <h3 class="column">Top Selling Date</h3>
    </div>

    <% @merchants.top_5_by_revenue.each do |merchant| %>
      <section class="row">
        <div class=<%= "column" %> id=<%= "top-five-merch-#{merchant.id}" %>>
          <%= link_to merchant.name, admin_merchant_path(merchant.id) %> 
        </div>
        <p class=<%= "column" %> id=<%= "top-five-rev-#{merchant.id}" %>><%= number_to_currency(merchant.revenue, unit: "$") %></p>
        <p class=<%= "column" %> id=<%= "top-five-date-#{merchant.id}" %>><%= "The top selling date for #{merchant.name} was #{merchant.top_rev_date.strftime("%m/%d/%Y")}" %></p>
      </section>
    <% end %>
  </div>